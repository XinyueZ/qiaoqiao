<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.qiaoqiao">


    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0bf5835ac1569fe382ff64839c0be3d3ed9396b9"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <meta-data
            android:name="com.google.android.awareness.API_KEY"
            android:value="@string/map"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map"/>

        <meta-data
            android:name="android.support.multidex.MultiDexApplication"
            android:value="true"/>

        <activity
            android:name=".core.splash.ui.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".core.splash.ui.LaunchImageFragment"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"/>


        <activity
            android:name=".core.camera.ui.CameraActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"/>


        <activity
            android:name=".core.location.MapActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"/>


        <activity
            android:name=".core.location.StreetViewActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"/>

        <activity
            android:name=".core.detail.ui.DetailActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"/>

        <activity
            android:name=".repository.web.ui.WebLinkActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"
            android:theme="@style/DialogStyle"/>

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/preference_title"
            android:screenOrientation="fullSensor"
            android:theme="@style/Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.camera.ui.CameraActivity"/>
        </activity>


        <activity
            android:name=".core.splash.ui.ConnectGoogleActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"
            android:theme="@style/Login"/>
    </application>

</manifest>