<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".core.splash.ConnectGoogleActivity">

    <data>

        <variable
            name="clickHandler"
            type="android.view.View.OnClickListener"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/connect_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ic_launcher_background"
            android:fitsSystemWindows="true"
            app:elevation="@dimen/z_card"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fitsSystemWindows="true"
                app:srcCompat="@mipmap/ic_launcher_round"/>
        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/login_pb"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_animated_loading_small_pb"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/thumb_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_default_image"/>

            </FrameLayout>

            <TextView
                android:id="@+id/hello_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/larger"
                android:layout_marginEnd="@dimen/larger"
                android:layout_marginLeft="@dimen/larger"
                android:layout_marginRight="@dimen/larger"
                android:layout_marginStart="@dimen/larger"
                android:layout_marginTop="@dimen/larger"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlueGrey"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <ImageButton

                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/larger"
                android:layout_marginEnd="@dimen/larger"
                android:layout_marginLeft="@dimen/larger"
                android:layout_marginRight="@dimen/larger"
                android:layout_marginStart="@dimen/larger"
                android:layout_marginTop="@dimen/larger"
                android:background="@color/colorTransparent"
                android:onClick="@{clickHandler::onClick}"
                android:src="@android:drawable/ic_media_play"
                android:visibility="invisible"/>
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>
</layout>