<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="LandmarkCellViewBinding">

        <variable
            name="visionEntity"
            type="com.qiaoqiao.vision.model.VisionEntity"/>

        <variable
            name="viewholder"
            type="com.qiaoqiao.vision.ui.VisionListAdapter.LandmarkCellViewHolder"/>
    </data>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack80"
        android:elevation="@dimen/z_card"
        android:foreground="@drawable/selector_transparent_item_background"
        android:onClick="@{() -> viewholder.onClicked(visionEntity)}"
        android:stateListAnimator="@animator/raise">

        <ImageView
            android:id="@+id/vision_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_default_image"/>

        <TextView
            android:id="@+id/vision_tv"
            style="@style/VisionItemTextViewCell"
            android:drawableEnd="@drawable/ic_location_pin"
            android:drawableRight="@drawable/ic_location_pin"
            tools:text="hello,world"/>

    </FrameLayout>
</layout>