<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.qiaoqiao.history.ui.HistoryFragment">

    <data>

        <variable
            name="fragment"
            type="android.support.v4.app.Fragment"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <StackView
            android:id="@+id/history_stv"
            android:layout_width="@dimen/history_item_size"
            android:layout_height="@dimen/history_item_size"
            android:animateLayoutChanges="true"
            android:loopViews="true"/>

        <TextView
            android:id="@+id/history_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_history"
            android:drawableStart="@drawable/ic_history"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorWhite"
            tools:text="page"/>
    </LinearLayout>
</layout>