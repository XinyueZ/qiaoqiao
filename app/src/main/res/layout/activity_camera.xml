<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".core.camera.ui.CameraActivity">

    <data>

        <variable
            name="actionBarToggle"
            type="android.support.v7.app.ActionBarDrawerToggle"/>

        <variable
            name="clickHandler"
            type="android.view.View.OnClickListener"/>

        <variable
            name="cameraSource"
            type="com.qiaoqiao.core.camera.barcode.CameraSource"/>

        <variable
            name="scaleDetector"
            type="android.view.ScaleGestureDetector"/>

        <variable
            name="gestureDetector"
            type="android.support.v4.view.GestureDetectorCompat"/>
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:keepScreenOn="true">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleGravity="start|bottom|left"
                    app:expandedTitleMarginEnd="@dimen/larger"
                    app:expandedTitleMarginStart="@dimen/larger"
                    app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:layout_scrollFlags="scroll|snap"
                    app:titleEnabled="false"
                    app:toolbarId="@+id/toolbar">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax">


                        <com.qiaoqiao.core.camera.barcode.CameraSourcePreview
                            android:id="@+id/preview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:keepScreenOn="true">

                            <com.qiaoqiao.core.camera.barcode.GraphicOverlay
                                android:id="@+id/barcode_detector_overlay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>


                        </com.qiaoqiao.core.camera.barcode.CameraSourcePreview>

                        <FrameLayout
                            android:id="@+id/container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tf_tv"
                                android:background="@color/material_blue_grey_95"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_marginTop="?attr/actionBarSize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_margin="@dimen/larger"
                                android:gravity="center">

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/flash_fab"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/larger"
                                    app:backgroundTint="@color/colorGreyTransparent"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/colorGrey"
                                    app:srcCompat="@drawable/ic_flash_on"/>


                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/capture_fab"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/larger"
                                    app:backgroundTint="@color/colorRed"
                                    app:fabSize="normal"
                                    app:rippleColor="@color/colorPink"
                                    app:srcCompat="@drawable/ic_capture"/>

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/camera_face_fab"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/larger"
                                    app:backgroundTint="@color/colorGreyTransparent"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/colorGrey"
                                    app:srcCompat="@drawable/ic_camera_front"/>
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/expand_more_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="@dimen/small"
                                android:layout_marginTop="@dimen/small"
                                android:background="@drawable/selector_round_green_rectangle_item_background"
                                android:onClick="@{(v) -> clickHandler.onClick(v)}"
                                android:tint="@color/colorWhite"
                                app:srcCompat="@drawable/ic_expand_more"/>
                        </LinearLayout>


                        <fragment
                            android:id="@+id/stackview_history_fg"
                            android:name="com.qiaoqiao.core.camera.history.ui.HistoryStackViewFragment"
                            android:layout_width="@dimen/stackview_item_size"
                            android:layout_height="@dimen/stackview_item_size"
                            android:layout_gravity="bottom|end|right"
                            android:layout_marginEnd="@dimen/medium"
                            android:layout_marginLeft="@dimen/medium"
                            android:layout_marginRight="@dimen/medium"
                            android:layout_marginStart="@dimen/medium"
                            android:layout_marginTop="@dimen/position_stackview"/>

                    </FrameLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        style="@style/AppBar"
                        app:layout_collapseMode="pin">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/bar_title_loading_pb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/bar_title_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/app_name"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="@color/colorWhite"
                                android:textColorHighlight="@color/colorWhite"/>
                        </com.facebook.shimmer.ShimmerFrameLayout>
                    </android.support.v7.widget.Toolbar>


                </android.support.design.widget.CollapsingToolbarLayout>


            </android.support.design.widget.AppBarLayout>

            <FrameLayout
                android:id="@+id/tabs_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"/>

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="1dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/expand_less_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/small"
                    android:background="@drawable/selector_round_green_rectangle_item_background"
                    android:onClick="@{(v) -> clickHandler.onClick(v)}"
                    android:tint="@color/colorWhite"
                    app:srcCompat="@drawable/ic_expand_less"/>
            </FrameLayout>

        </android.support.design.widget.CoordinatorLayout>


        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorWhite"
            android:fitsSystemWindows="true"
            android:theme="@style/NavDrawerItem"
            app:headerLayout="@layout/layout_navigation_drawer_header"
            app:itemIconTint="@color/colorBlueGrey"
            app:itemTextColor="@color/colorBlueGrey"
            app:menu="@menu/menu_navigation_view"/>

    </android.support.v4.widget.DrawerLayout>
</layout>
