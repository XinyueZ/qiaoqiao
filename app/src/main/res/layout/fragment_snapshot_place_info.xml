<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View"/>

        <import type="android.text.TextUtils"/>

        <variable
            name="placeWrapper"
            type="com.qiaoqiao.core.camera.awareness.map.PlaceWrapper"/>

        <variable
            name="clickHandler"
            type="View.OnClickListener"/>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/larger">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/place_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/place_info_preview"
                android:layout_marginBottom="@dimen/medium"
                android:scaleType="centerCrop"
                bind:placeWrapper="@{placeWrapper}"
                tool:src="@drawable/ic_geosearch"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/place_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{placeWrapper.getPlace().getName()}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:visibility="@{TextUtils.isEmpty(placeWrapper.getPlace().getName()) ? View.GONE : View.VISIBLE}"
                    tool:text="place name"/>

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{placeWrapper.getPlace().getAddress()}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:visibility="@{TextUtils.isEmpty(placeWrapper.getPlace().getAddress()) ? View.GONE : View.VISIBLE}"
                    tool:text="place address"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/larger"
            android:background="@drawable/selector_transparent_item_background"
            android:onClick="@{ clickHandler::onClick}"
            android:text="@{placeWrapper.getPlace().getPhoneNumber()}"
            android:textColor="@color/colorBlue"
            android:textStyle="italic"
            android:visibility="@{TextUtils.isEmpty(placeWrapper.getPlace().getPhoneNumber()) ? View.GONE : View.VISIBLE}"
            tool:text="+4917666686748"/>

        <TextView
            android:id="@+id/web_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/larger"
            android:background="@drawable/selector_transparent_item_background"
            android:onClick="@{  clickHandler::onClick}"
            android:text="@{placeWrapper.getPlace().getWebsiteUri().toString()}"
            android:textColor="@color/colorBlue"
            android:visibility="@{placeWrapper.getPlace().getWebsiteUri() == null ? View.GONE : View.VISIBLE}"
            tool:text="http://wwww.google.com"/>

        <FrameLayout
            android:id="@+id/open_map_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_round_blue_rectangle_item_background"
            android:onClick="@{  clickHandler::onClick}"
            android:padding="@dimen/mini"
            android:visibility="@{placeWrapper.getPlace().getLatLng() == null ? View.GONE : View.VISIBLE}">

            <ImageButton
                android:id="@+id/open_map_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/mini"
                android:background="@color/colorTransparent"
                android:transitionName="@string/transition_share_item_name"
                app:srcCompat="@drawable/ic_map"/>
        </FrameLayout>
    </LinearLayout>
</layout>