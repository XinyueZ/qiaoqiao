<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/crop_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom">


            <ImageView
                android:id="@+id/crop_fb_pb"
                style="@style/ButtonProgressBar"
                app:srcCompat="@drawable/ic_animated_loading_small_pb"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/crop_fb"
                style="@style/MainControlButton"
                app:backgroundTint="@color/colorTealDark"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_cropped"/>

        </FrameLayout>

    </FrameLayout>

</layout>