<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".core.product.ui.ProductListFragment">

    <data>

        <variable
            name="fragment"
            type="com.qiaoqiao.core.product.ui.ProductListFragment"/>

        <variable
            name="showProduct"
            type="Boolean"/>

        <variable
            name="product"
            type="com.qiaoqiao.core.product.model.ProductEntity"/>

        <import type="android.view.View"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:keepScreenOn="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:visibility="@{showProduct ? View.VISIBLE : View.GONE}">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:fitsSystemWindows="true"
                app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Small"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleGravity="start|bottom|left"
                app:expandedTitleMarginEnd="@dimen/larger"
                app:expandedTitleMarginStart="@dimen/larger"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false"
                app:toolbarId="@+id/toolbar">


                <android.support.v4.view.ViewPager
                    android:id="@+id/product_image_vp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    bind:product="@{product}"/>


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/AppBar"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{showProduct ? View.VISIBLE : View.GONE}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    style="@style/BoxCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:transitionGroup="false">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        bind:autoText="@{product.name}"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/BoxCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:transitionGroup="false">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        bind:autoText="@{product.description}"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    bind:autoText="@{product.provider}"/>


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{!showProduct ? View.VISIBLE : View.GONE}">

            <TextView
                android:id="@+id/loading_pb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textAlignment="center"/>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="@dimen/loading_pb_size"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"/>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>