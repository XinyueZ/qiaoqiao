<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="historyItem"
            type="com.qiaoqiao.ds.history.HistoryItem"/>

        <variable
            name="viewholder"
            type="com.qiaoqiao.history.ui.HistoryStackAdapter.ViewHolder"/>
    </data>

    <FrameLayout
        android:layout_width="@dimen/history_item_size"
        android:layout_height="@dimen/history_item_size"
        android:background="@color/colorBlack80">

        <ImageView
            android:id="@+id/history_item_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foreground="@drawable/selector_transparent_item_background"
            android:onClick="@{() -> viewholder.onEntryClicked(historyItem)}"
            android:scaleType="centerCrop"/>

    </FrameLayout>
</layout>