<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data class="PlacesBinding"></data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cameraZoom="@integer/zoom"
            app:mapType="normal"
            app:uiCompass="false"
            app:uiRotateGestures="false"
            app:uiScrollGestures="true"
            app:uiTiltGestures="false"
            app:uiZoomControls="false"
            app:uiZoomGestures="true"/>

        <com.qiaoqiao.views.LocatingControlView
            android:id="@+id/locating_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/larger"/>


        <FrameLayout
            android:id="@+id/adjust_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/larger"
            android:background="@color/colorBlueGrey80"
            android:paddingBottom="@dimen/medium"
            android:paddingLeft="@dimen/larger"
            android:paddingRight="@dimen/larger"
            android:paddingTop="@dimen/medium"
            android:visibility="gone">

            <SeekBar
                android:id="@+id/adjust_radius_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10000"
                android:progress="10"
                />

        </FrameLayout>
    </FrameLayout>

</layout>